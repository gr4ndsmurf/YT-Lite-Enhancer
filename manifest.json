{
  "manifest_version": 3,
  "name": "YT Lite Enhancer",
  "version": "3.0",
  "description": "Lightweight video speed control and Windowed mode in one package.",
  "permissions": ["storage"],
  "action": {
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}